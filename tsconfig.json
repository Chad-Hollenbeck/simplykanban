{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es5",
    "downlevelIteration": true,
    "module": "esnext",
    "importHelpers": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "@environments/*": [
        "environments/*"
      ],
      "@assets/*": [
        "assets/vendor/*"
      ],
      "@vendor/*": [
        "vendor/*"
      ],
      "@app/*": [
        "app/*"
      ],
    }
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "preserveWhitespaces": false,
    "enableIvy": true,
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
  }
}
